#!/bin/sh
#
#

bind() {
    btn=$1
    cmd=$2
    shift 2
    goxhkc -button "$btn" -command "$cmd" "$@"
}

unbind() { goxhkc -button "$1" -clear; }

goxhkc -clearall

bind 'Mod4-v' 'notify-send "Hey"'
bind 'Mod4-v' 'notify-send "Also hey on release"' -onrelease
unbind 'Mod4-v'

bind 'Mod4-v' 'notify-send "Hey (actually)"'
bind 'Mod4-v' 'notify-send "Also Hey on release (actually)"' -onrelease

bind 'Mod4-shift-v' 'notify-send "Hello"'
bind 'Mod4-shift-v' 'notify-send "Also hello on release"' -onrelease
